               /post/r-in-jupyter-notebook/index.en_insertimage_2_hub190364ba2d4ce5ef102c2ce0e0a1ee2_30955_10b721068f1a5776d412719687855dfa.webp 400w,
               /post/r-in-jupyter-notebook/index.en_insertimage_2_hub190364ba2d4ce5ef102c2ce0e0a1ee2_30955_190e964a8e2ac0497d4043073f295a55.webp 760w,
               /post/r-in-jupyter-notebook/index.en_insertimage_2_hub190364ba2d4ce5ef102c2ce0e0a1ee2_30955_1200x1200_fit_q75_h2_lanczos_3.webp 1200w&#34;
               src=&#34;http://example.org/post/r-in-jupyter-notebook/index.en_insertimage_2_hub190364ba2d4ce5ef102c2ce0e0a1ee2_30955_10b721068f1a5776d412719687855dfa.webp&#34;
               width=&#34;737&#34;
               height=&#34;410&#34;
               loading=&#34;lazy&#34; data-zoomable /&gt;&lt;/div&gt;
  &lt;/div&gt;&lt;/figure&gt;
&lt;/li&gt;
&lt;li&gt;Install kernal spec for the current user.&lt;br&gt;
&lt;code&gt;IRkernel::installspec()&lt;/code&gt;&lt;br&gt;
















&lt;figure  &gt;
  &lt;div class=&#34;d-flex justify-content-center&#34;&gt;
    &lt;div class=&#34;w-100&#34; &gt;&lt;img alt=&#34;Install spec&#34; srcset=&#34;
               /post/r-in-jupyter-notebook/index.en_insertimage_3_hu0cae744fd1fb42405d89ad7510c7afac_1157_7fc704ddf1587baa7fcdfbfe54e8e427.webp 400w,
               /post/r-in-jupyter-notebook/index.en_insertimage_3_hu0cae744fd1fb42405d89ad7510c7afac_1157_f7fc7e1a26c88d6c2a39775b570fe260.webp 760w,
